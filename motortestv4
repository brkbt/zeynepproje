#define ENA 10
#define IN1 9
#define IN2 8
#define IN3 7
#define IN4 6
#define ENB 5
#define RELAY_PIN 4

void setup() {
  pinMode(ENA, OUTPUT);
  pinMode(IN1, OUTPUT);
  pinMode(IN2, OUTPUT);
  pinMode(IN3, OUTPUT);
  pinMode(IN4, OUTPUT);
  pinMode(ENB, OUTPUT);
  pinMode(RELAY_PIN, OUTPUT);
}
#include <AFMotor.h>

// Motorları tanımla
AF_DCMotor motor1(1);
AF_DCMotor motor2(2);

void setup() {
  Serial.begin(9600); // seri portu başlat
  motor1.setSpeed(255); // motor hızını maksimuma çıkar
  motor2.setSpeed(255); // motor hızını maksimuma çıkar
}

void loop() {
  // seri portta veri varsa oku
  if (Serial.available()) {
    String command = Serial.readStringUntil('\n');

    if (command == "m1r") { // Motor 1'i sağa döndür
      motor1.run(FORWARD);
      delay(1000);
      motor1.run(RELEASE);
    } 
    else if (command == "m1l") { // Motor 1'i sola döndür
      motor1.run(BACKWARD);
      delay(1000);
      motor1.run(RELEASE);
    } 
    else if (command == "m2u") { // Motor 2'yi yukarı çek
      motor2.run(FORWARD);
      delay(1000);
      motor2.run(RELEASE);
    } 
    else if (command == "m2d") { // Motor 2'yi aşağı indir
      motor2.run(BACKWARD);
      delay(1000);
      motor2.run(RELEASE);
    }
  }
}
