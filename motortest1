// Motorlar için kontrol pinleri
int motor1Pin1 = 9; // IN1 - L298N
int motor1Pin2 = 8; // IN2 - L298N
int motor2Pin1 = 7; // IN3 - L298N
int motor2Pin2 = 6; // IN4 - L298N

void setup() {
  // Motor kontrol pinlerini çıkış olarak ayarla
  pinMode(motor1Pin1, OUTPUT);
  pinMode(motor1Pin2, OUTPUT);
  pinMode(motor2Pin1, OUTPUT);
  pinMode(motor2Pin2, OUTPUT);
}

void loop() {
  // Motor 1'i saat yönünde döndür
  digitalWrite(motor1Pin1, HIGH);
  digitalWrite(motor1Pin2, LOW);

  // Motor 2'yi saat yönünde döndür
  digitalWrite(motor2Pin1, HIGH);
  digitalWrite(motor2Pin2, LOW);

  delay(2000); // 2 saniye beklet

  // Motorları durdur
  digitalWrite(motor1Pin1, LOW);
  digitalWrite(motor1Pin2, LOW);
  digitalWrite(motor2Pin1, LOW);
  digitalWrite(motor2Pin2, LOW);

  delay(2000); // 2 saniye beklet

  // Motor 1'i saat yönünün tersine döndür
  digitalWrite(motor1Pin1, LOW);
  digitalWrite(motor1Pin2, HIGH);

  // Motor 2'yi saat yönünün tersine döndür
  digitalWrite(motor2Pin1, LOW);
  digitalWrite(motor2Pin2, HIGH);

  delay(2000); // 2 saniye beklet

  // Motorları tekrar durdur
  digitalWrite(motor1Pin1, LOW);
  digitalWrite(motor1Pin2, LOW);
  digitalWrite(motor2Pin1, LOW);
  digitalWrite(motor2Pin2, LOW);

  delay(2000); // 2 saniye beklet
}
